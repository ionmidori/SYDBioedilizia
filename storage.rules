rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================
    // RENDERS FOLDER (Generated Images)
    // ==========================================
    // FIXED: Use recursive wildcard to match nested paths like /renders/{session}/{file}
    // Public read so users can view images in chat
    // Server-only write via Admin SDK
    match /renders/{allPaths=**} {
      // Anyone can read (view images)
      allow read: if true;
      
      // Only server can write (upload images via Admin SDK)
      allow write: if false;
    }
    
    // ==========================================
    // USER UPLOADS FOLDER (Client-side uploads)
    // ==========================================
    // Allow client-side uploads via signed URLs
    // Signed URLs bypass these rules, but we allow writes for additional safety
    match /user-uploads/{sessionId}/{fileName} {
      // Public read access for uploaded images
      allow read: if true;
      
      // Allow writes - signed URLs will enforce expiration and permissions
      // This enables direct browser uploads without going through server
      allow write: if false;
    }
    
    // ==========================================
    // DEFAULT RULE - DENY ALL
    // ==========================================
    // Deny access to all other folders
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
