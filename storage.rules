rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp|heic)');
    }
    
    function isValidDocument() {
      return request.resource.contentType == 'application/pdf';
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/(mp4|quicktime|x-msvideo)');
    }
    
    function isWithinSizeLimit(maxSizeMB) {
      return request.resource.size <= maxSizeMB * 1024 * 1024;
    }
    
    // ==========================================
    // USER AVATARS
    // ==========================================
    
    match /users/{userId}/avatar.webp {
      allow write: if isAuthenticated() 
        && isOwner(userId)
        && isValidImage()
        && isWithinSizeLimit(5);
      
      allow read: if isAuthenticated();
    }
    
    // ==========================================
    // PROJECT FILES (Manual Uploads)
    // ==========================================
    
    match /projects/{projectId}/uploads/{fileName} {
      allow write: if isAuthenticated()
        && (
          (isValidImage() && isWithinSizeLimit(10)) ||
          (isValidDocument() && isWithinSizeLimit(25)) ||
          (isValidVideo() && isWithinSizeLimit(100))
        );
      
      allow read: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // ==========================================
    // RENDERS FOLDER (AI-Generated Images)
    // ==========================================
    
    match /renders/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // ==========================================
    // USER UPLOADS FOLDER (Chat Attachments)
    // ==========================================
    
    match /user-uploads/{sessionId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ==========================================
    // DEFAULT RULE - DENY ALL
    // ==========================================

    // Deny access to all other folders
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
